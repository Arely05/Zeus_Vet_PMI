<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Card"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/l_card"
        android:layout_width="match_parent"
        android:layout_height="339dp"
        android:layout_gravity="center"
        android:layout_margin="40dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_nombrecomprador"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Nombre del Comprador"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_telefono"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="TelÃ©fono"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_correo"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Correo"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/card_nombreproducto"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Nombre del Producto"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_producto"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Tipo de Producto"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/card_cantidad"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Cantidad Comprada"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/card_total"
                android:layout_width="313dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:hint="Total de la Compra"
                android:textColor="@color/Black"
                android:textColorHint="@color/Black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/b_llamar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/Primary"
                android:text="Llamar"
                android:textColor="@color/White"
                app:icon="@android:drawable/stat_sys_phone_call" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>